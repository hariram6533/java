package javaapplication3;
import java.util.Scanner;

public class JavaApplication3 {

    public static void main(String[] args) {




               Scanner sc = new Scanner(System.in);
               System.out.println("enter first number");
               int a = sc.nextInt();
               System.out.println("enter second number");
               int b = sc.nextInt();
               Scanner op = new Scanner(System.in);
               System.out.println("Enter your operater + , -, *, /");
               char o =op.next().charAt(0);
               switch(o){
                   case  '+' -> {
                       //int c = a+b;
                       System.out.print("your addition is ");
                       System.out.println(a+b);
            }
                       
                   case  '-' -> {
                       //int c = a+b;
                       System.out.print("your subtraction is ");
                       System.out.println(a-b);
            }
                       
                   case  '*' -> {
                       //int c = a+b;
                       System.out.print("your multiplication is ");
                       System.out.println(a*b);
            }
                       
                   case  '/' -> {
                       //int c = a+b;
                       System.out.print("your divison is ");
                       System.out.println(a/b);
            }
                   default ->{
                       System.out.println("invalid operater");
                   }     
                
               }
               
               }
               
               
               }
               
